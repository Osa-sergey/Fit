<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="profile"
            type="Pojo.Profile" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_marginTop="45dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/ic_profile_background">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/avatar"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_person_icon_orange"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="sans-serif"
                    android:text="@{profile.fullName}"
                    android:textColor="@color/textBlack"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toEndOf="@+id/avatar"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="@string/header_edit"
                    android:textSize="14sp"
                    android:focusable="true"
                    android:clickable="true"
                    app:layout_constraintStart_toStartOf="@+id/profile_name"
                    app:layout_constraintTop_toBottomOf="@+id/profile_name" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/avatar">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:weightSum="3">

                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal|top"
                            android:src="@drawable/ic_weight" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:fontFamily="sans-serif"
                            android:text="@string/profile_weight"
                            android:textColor="@color/textWhite"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="17dp"
                            android:layout_gravity="center_horizontal|bottom"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/textWhite"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal|top"
                            android:src="@drawable/ic_power" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:fontFamily="sans-serif"
                            android:text="@string/profile_power"
                            android:textColor="@color/textWhite"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/power"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="17dp"
                            android:layout_gravity="center_horizontal|bottom"
                            android:fontFamily="sans-serif"
                            android:text="@{profile.power}"
                            android:textColor="@color/textWhite"
                            android:textSize="14sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center_horizontal|top"
                            android:src="@drawable/ic_experience" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal|center_vertical"
                            android:fontFamily="sans-serif"
                            android:text="@string/profile_experience"
                            android:textColor="@color/textWhite"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/experience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="17dp"
                            android:layout_gravity="center_horizontal|bottom"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/textWhite"
                            android:textSize="14sp" />

                    </LinearLayout>
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_age"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/age"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="16dp"
                android:background="#9A9595" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_email"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{profile.email}"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="16dp"
                android:background="#9A9595" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_phone"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/Phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{profile.phone}"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="5dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="16dp"
                android:background="#9A9595" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_med"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/med"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{profile.med}"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="1dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="16dp"
                android:background="#9A9595"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_about"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:layout_marginTop="8dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{profile.about}"
                android:layout_gravity="start"
                android:layout_marginStart="18dp"
                android:textColor="@color/textBlack"
                android:textSize="14sp"/>

            <View
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="1dp"
                android:layout_marginStart="18dp"
                android:layout_marginEnd="16dp"
                android:background="#9A9595"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>