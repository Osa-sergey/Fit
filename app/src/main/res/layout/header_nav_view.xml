<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_nav_view_height"
    android:background="@drawable/header_grad"
    android:paddingLeft="@dimen/header_horizontal_margin"
    android:paddingTop="@dimen/header_vertical_margin"
    android:paddingRight="@dimen/header_horizontal_margin"
    android:paddingBottom="@dimen/header_vertical_margin">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/header_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="42dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/icon"
        android:src="@drawable/ic_person_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/header_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:text="Овчинников Сергей"
        android:textColor="@color/textBlack"
        android:textSize="19sp"
        android:textStyle="bold"
        android:maxLines="2"
        android:maxWidth="170dp"
        app:layout_constraintStart_toEndOf="@+id/header_icon"
        app:layout_constraintTop_toTopOf="@+id/header_icon" />

    <TextView
        android:id="@+id/header_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/header_edit"
        android:textColor="@color/headerEditColor"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/header_icon"
        app:layout_constraintStart_toStartOf="@+id/header_name"
        app:layout_constraintTop_toBottomOf="@+id/header_name" />

</androidx.constraintlayout.widget.ConstraintLayout>